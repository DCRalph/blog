<% if (!locals.post.deleted) { %>
    <div class="row mt-4">
        <h1 class="col-8"><%= post.title %></h1>
        <% if (locals.user) { if (user.deleteOthers || user.name == post.madeBy) { %>
            <form action="delete-post" method="post" class="col-4 justify-content-end">
                <input class="d-none" name="postId" value="<%= post.id %>">
                <button class="btn btn-primary float-end" type="submit">Delete</button>
            </form>
        <% }} %>
    </div>

    <p class="lead">by <a href="/users/<%= post.madeBy %>"><%= post.madeBy %></a></p>

    <hr>
    <p><%= post.date %></p>
    <hr>
    <% if (locals.post.img[0] != "") { %>
        <% post.img.forEach(function(img){ %>
            <img class="img-fluid rounded mb-3 mx-auto d-block" src="<%= img %>" alt="">
        <% }); %>
        <hr>
    <% } %>
    <p class="lead"><%- post.content %></p>
    <hr>
<% } %>
